{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/email.css') }}">
{% endblock %}

{% block body %}

    <div class="container">

        {#    {% if info.qualiteAir == 'Bonne' %}
            <body background="/public/images/mail-bon.jpg">
            {% endif %}#}

        {% block title %}<h1>Prévisions du jour</h1>{% endblock %}

        <h2>Bonjour !</h2>

        <p>Voici les caractéristiques quotidiennes de la qualité de l'air et quelques recommandations.</p>

        <div id="bloc__air" class="container">

            <div class="row">
                    <h3 class="mb-4">Les indices de pollution dans votre ville</h3>
                    <h4 class="mb-2">LA VILLE</h4>
                    <div class="row">
                        <h4 class="bloc__titre col-6">Dioxyde d'azote: INDICE NO2</h4>
                        <h4 class="bloc__titre col-6">Ozone: INDICE O2</h4>
                    </div>
                    <div class="row">
                        <h4 class="bloc__titre col-6">Particules fines: INDICE PM10</h4>
                        <h4 class="bloc__titre col-6">Dioxyde de soufre: INDICE SO2</h4>
                    </div>
                </div>

                {% if users.lieu_travail is defined %}
                    <div class="col">
                        <h3 class="mb-4">Les indices de pollution sur votre lieu de travail</h3>
                        <h4 class="mb-2">LE LIEU DE TRAVAIL</h4>
                        <div class="row">
                            <h4 class="bloc__titre col-6">Dioxyde d'azote: INDICE NO2</h4>
                            <h4 class="bloc__titre col-6">Ozone: INDICE O2</h4>
                        </div>
                        <div class="row">
                            <h4 class="bloc__titre col-6">Particules fines: INDICE PM10</h4>
                            <h4 class="bloc__titre col-6">Dioxyde de soufre: INDICE SO2</h4>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        {#{% if info.qualiteAir == 'Bonne' %}#}
        <p class="mt-3 mb-3">La qualité de l'air étant bonne, vous pouvez vous rendre sur votre lieu de travail en voiture, mais privilégiez au maximum le co-voiturage et les transports en commun.</p>
        {#{% endif %}#}

        <div id="bloc__meteo" class="container">

            <div class="row">
                <div class="col">
                    <h3 class="mb-4">Les prévisions météo dans votre ville</h3>
                    <h4 class="mb-2">LA VILLE</h4>
                    <div class="row">
                        <h4 class="bloc__titre col-6">ICONE Beau temps</h4>
                        <h4 class="bloc__titre col-6">Température: 27°C</h4>
                    </div>
                    <div class="row">
                        <h4 class="bloc__titre col-6">Humidité: 34%</h4>
                        <h4 class="bloc__titre col-6">Température ressentie: 29°C</h4>
                    </div>
                </div>

                {% if users.lieu_travail is defined %}
                    <div class="col">
                        <h3 class="mb-4">Les prévisions météo à votre lieu de travail</h3>
                        <h4 class="mb-2">LE LIEU DE TRAVAIL</h4>
                        <div class="row">
                            <h4 class="bloc__titre col-6">ICONE Beau temps</h4>
                            <h4 class="bloc__titre col-6">Température: 27°C</h4>
                        </div>
                        <div class="row">
                            <h4 class="bloc__titre col-6">Humidité: 34%</h4>
                            <h4 class="bloc__titre col-6">Température ressentie: 29°C</h4>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>


    </body>

{% endblock %}